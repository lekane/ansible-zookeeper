[Unit]
Description=Kafka Manager service
Documentation=https://github.com/yahoo/kafka-manager

[Service]
Type=simple
PIDFile=/var/run/kafka_manager.pid
User=zookeeper
Group=zookeeper
ExecStart=/opt/kafka-manager/bin/kafka-manager
Restart=always
WorkingDirectory=/opt/kafka-manager
SyslogIdentifier=kafka-manager
