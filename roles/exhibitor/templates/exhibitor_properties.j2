zookeeper-install-directory=/opt/zookeeper
zookeeper-data-directory=/var/lib/zookeeper/data
zookeeper-log-directory=/var/lib/zookeeper/transactions
log-index-directory=/var/lib/zookeeper/datalog
auto-manage-instances=1
servers-spec={{ servers_spec }}
zoo-cfg-extra={{ zoo_cfg_extra }}
auto-manage-instances-settling-period-ms={{ instances_settling_period }}
log4j-properties=log4j.rootLogger=INFO, ROLLINGFILE\n\
log4j.appender.ROLLINGFILE=org.apache.log4j.RollingFileAppender\n\
log4j.appender.ROLLINGFILE.Threshold=INFO\n\
log4j.appender.ROLLINGFILE.File=/var/log/zookeeper/zookeeper.log\n\
log4j.appender.ROLLINGFILE.MaxFileSize=50MB\n\
log4j.appender.ROLLINGFILE.MaxBackupIndex=10\n\
log4j.appender.ROLLINGFILE.layout=org.apache.log4j.PatternLayout\n\
log4j.appender.ROLLINGFILE.layout.ConversionPattern=%d{ISO8601} [myid:%X{myid}] - %-5p [%t:%C{1}@%L] - %m%n
